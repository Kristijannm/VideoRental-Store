@model UserLoginViewModel
@{
    ViewData["Title"] = "Login";
}
<div class="jumbotron d-flex flex-column align-items-center">
    <h1 class="display-4">Welcome to Video Rental!</h1>
    <p class="lead">Your one-stop destination for renting movies online.</p>
    <hr class="my-4" style="width: 100%;">
</div>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="text-center mb-4">Login</h2>
                    <form asp-action="Login" asp-controller="User">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group mb-3">
                            <label asp-for="FullName" class="form-label"></label>
                            <input asp-for="FullName" class="form-control" placeholder="Full Name" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="CardNumber" class="form-label"></label>
                            <input asp-for="CardNumber" class="form-control" placeholder="Card Number" />
                            <span asp-validation-for="CardNumber" class="text-danger"></span>
                        </div>
                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-primary btn-block">Login</button>
                        </div>
                        <div class="text-center">
                            <p>Don't have an account? <a asp-controller="User" asp-action="Register">Register here</a></p>
                         @*    <p><a asp-controller="User" asp-action="ForgotPassword">Forgot Password?</a></p> *@
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



 