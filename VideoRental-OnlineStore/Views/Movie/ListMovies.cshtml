<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1>Welcome, @userFullName!</h1>
            <p>Here is a list of available movies:</p>
            <hr />

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Genre</th>
                        <th>Availability</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var movie in Model)
                    {
                        <tr>
                            <td>@movie.Title</td>
                            <td>@movie.Genre</td>
                            <td>
                                <span class="@(movie.Quantity > 0 ? "text-success" : "text-danger")">
                                    @(movie.Quantity > 0 ? "Available" : "Not Available")
                                </span>
                            </td>
                            <td>
                                <a href="@Url.Action("Details", "Movie", new { id = movie.Id })" class="btn btn-outline-dark btn-sm">Details</a>
                                @if (movie.Quantity > 0)
                                {
                                    <a href="@Url.Action("RentMovie", "Rent", new { id = movie.Id })" class="btn btn-outline-success btn-sm">Rent</a>
                                }
                                else
                                {
                                    <button class="btn btn-secondary btn-sm" disabled>Rent</button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
